<idea-plugin>
    <id>org.anilmisirlioglu.keystroke.idea-keystroke-counter</id>
    <name>Keystroke Counter</name>
    <vendor email="misirlioglisamet@gmail.com" url="https://www.asena.xyz">Anıl Mısırlıoğlu</vendor>

    <description>Keystroke counter and statistics tool for JetBrains IDEs.</description>

    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>org.anilmisirlioglu.keystroke.KeyboardListener</implementation-class>
        </component>
    </application-components>

    <!--<applicationListeners>
        <listener class="org.anilmisirlioglu.keystroke.KeyboardListener" topic="com.intellij.ide.IdeEventQueue$EventDispatcher"/>
    </applicationListeners>-->

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.anilmisirlioglu.keystroke.services.StatisticsService"/>
    </extensions>

    <actions>
        <group id="Keystroke.ViewAction" text="View Test" description="TODO">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action
                    class="org.anilmisirlioglu.keystroke.MainAction"
                    id="Keystroke.Actions.ViewAction"
                    text="Test!"
                    description="Test view action"
            />
        </group>
    </actions>

</idea-plugin>