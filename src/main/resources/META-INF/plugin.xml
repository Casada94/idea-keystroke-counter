<idea-plugin>
    <id>org.anilmisirlioglu.keystroke.idea-keystroke-counter</id>
    <name>Keystroke Counter</name>
    <vendor email="misirlioglisamet@gmail.com" url="https://www.asena.xyz">Anıl Mısırlıoğlu</vendor>

    <description>Keystroke counter and statistics tool for JetBrains IDEs.</description>

    <depends>com.intellij.modules.platform</depends>

    <application-components>
        <component>
            <implementation-class>org.anilmisirlioglu.keystroke.KeyboardListener</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="org.anilmisirlioglu.keystroke.services.StatisticsService"/>

        <applicationService serviceImplementation="org.anilmisirlioglu.keystroke.services.SettingsService"/>

        <applicationConfigurable
                id="KeyStrokeConfiguration"
                displayName="Keystroke Counter"
                instance="org.anilmisirlioglu.keystroke.SettingsConfigurable"
                groupId="tools"/>

        <toolWindow
                id="Key Stroke Statistics"
                anchor="right"
                factoryClass="org.anilmisirlioglu.keystroke.StatisticsToolWindowFactory"
                icon="AllIcons.General.ExternalTools"/>
    </extensions>

    <actions>
        <group id="Keystroke.Action" text="Reset Statistics" description="Reset keystroke statistics">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action
                    class="org.anilmisirlioglu.keystroke.actions.StatisticsResetAction"
                    id="Keystroke.Actions.ResetStatistics"
                    text="Reset Statistics"
                    description="Reset statistics"
            />
        </group>
    </actions>

</idea-plugin>